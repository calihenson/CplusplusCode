#include <stdio.h>
#include <cmath>
#include <iostream>
using namespace std;

int main()
{

//initialize variables for equations

float sphereVolume = 0.0;
float sphereRadius = 0.0;
float cylinderVolume = 0.0;
float handleLength = 0.0;
float handleRadius = 0.0;
float dumbbellVolume = 0.0;

//initialize densities in kg/m^3 https://www.engineeringtoolbox.com/metal-alloys-densities-d_50.html

const int densityAluminum = 2712;
const int densityIron = 7850;
const int densityLead = 11340;
const int densitySilver = 10490;

//initialize mass of different metal dumbbells

float massAluminum = 0.0;
float massIron = 0.0;
float massLead = 0.0;
float massSilver = 0.0;

//calculate volume

cin >> sphereRadius >> handleRadius >> handleLength;
sphereVolume = (4.0 * M_PI * pow(sphereRadius, 3)) / 3;
cylinderVolume = M_PI * handleLength * pow(handleRadius, 2);
dumbbellVolume = (2 * sphereVolume) + cylinderVolume;

//calculate masses

massAluminum = densityAluminum * dumbbellVolume;
massIron = densityIron * dumbbellVolume;
massLead = densityLead * dumbbellVolume;
massSilver = densitySilver * dumbbellVolume;

//output messages

cout << "Radius of the sphere is " << sphereRadius << " meters." << endl;
cout << "Radius of the handle is " << handleRadius << " meters." << endl;
cout << "Length of the handle is " << handleLength << " meters." << endl << endl;

cout << "Volume of the sphere is " << sphereVolume << " meters^3." << endl;
cout << "Volume of the cylinder is " << cylinderVolume << " meters^3." << endl;
cout << "Volume of the Dumbbell is " << dumbbellVolume << " meters^3." << endl << endl;

cout << "Mass of the Aluminum Dumbbell is " << massAluminum << " kg." << endl;
cout << "Mass of the Iron Dumbbell is " << massIron << " kg." << endl;
cout << "Mass of the Lead Dumbbell is " << massLead << " kg." << endl;
cout << "Mass of the Silver Dumbbell is " << massSilver << " kg." << endl;

    return 0;
}

